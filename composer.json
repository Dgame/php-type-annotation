{
    "name": "dgame/php-type-annotation",
    "description": "php type annotation",
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/php-type-annotation",
    "authors": [
        {
            "name": "Randy Schuett ",
            "email": "rswhite4@gmail.com",
            "homepage": "https://github.com/php-type-annotation"
        }
    ],
    "require": {
        "php": "^7.1",
        "dgame/php-type": "~0.8"
    },
    "autoload": {
        "classmap": [
            "src/"
        ],
        "psr-4": {
            "Dgame\\Annotation\\": "src/",
            "Dgame\\Annotation\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "phpstan/phpstan": "^0.11.12"
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "coverage": [
            "phpunit --coverage-clover=coverage"
        ]
    }
}
